<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <div class="input-group">
    <%= form.text_field :body, class: "form-control", placeholder: "Add a comment" %>
    <div class="input-group-btn">
      <%= form.submit class: "btn btn-success", id: "postComment" %>
    </div>
  </div>  
<% end %>